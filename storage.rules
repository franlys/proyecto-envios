rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Regla para fotos de recolecciones (subidas por Recolector y Repartidor)
    // Incluye carpetas temporales, de recolección y de entrega
    match /recolecciones/{recoleccionId}/{allImages=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Regla para evidencias de repartidores (fotos de entrega, daños, etc.)
    match /repartidores/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Regla para evidencia de entrega (fotos subidas al marcar como entregada)
    match /evidencia_entrega/{facturaId}/{allImages=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Regla para reportes de daños
    match /danos_reparto/{facturaId}/{allImages=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Regla para reportes de no entrega
    match /reportes_no_entrega/{facturaId}/{allImages=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Opcional: Si tienes fotos de perfil de usuario
    match /user_photos/{userId}/{imageId} {
       allow read: if true; // Fotos públicas? O if request.auth != null;
       allow write: if request.auth != null && request.auth.uid == userId; // Solo el propio usuario
    }

    // ✅ APKs para launcher (CI/CD automático)
    match /launcher-apps/{allPaths=**} {
      allow read: if true;  // Público para que los launchers puedan descargar
      allow write: if request.auth != null;  // Solo autenticados (GitHub Actions)
    }

    // Bloquear acceso a cualquier otra ruta por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}