rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Regla para fotos de recolecciones (subidas por Recolector y Repartidor)
    // Incluye carpetas temporales, de recolección y de entrega
    match /recolecciones/{recoleccionId}/{allImages=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Regla para evidencias de repartidores (fotos de entrega, daños, etc.)
    match /repartidores/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Opcional: Si tienes fotos de perfil de usuario
    match /user_photos/{userId}/{imageId} {
       allow read: if true; // Fotos públicas? O if request.auth != null;
       allow write: if request.auth != null && request.auth.uid == userId; // Solo el propio usuario
    }

    // Bloquear acceso a cualquier otra ruta por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}